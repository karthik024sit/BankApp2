@model BankApp2.Context.Account
@{
    ViewBag.Title = "Account";
}
<style>
    .error{
        color:red;
    }
</style>

@using (Html.BeginForm("AddAccount","Account",FormMethod.Post))
{

<div class="container">
    <div class="form-group">
        @Html.HiddenFor(x=>x.Accid)
        <label>Accname</label>
        @Html.ValidationMessageFor(x => x.Accname,"",new { @class="error" })
        @Html.TextBoxFor(x => x.Accname, new { @class = "form-control" })
    </div>
    

    <div class="form-group">
        <label>Email</label>
        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "error" })
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>


    <div class="form-group">
        <label>phone</label>
        @Html.ValidationMessageFor(x => x.phone, "", new { @class = "error" })
        @Html.TextBoxFor(x => x.phone, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>balance</label>
        @Html.ValidationMessageFor(x => x.balance, "", new { @class = "error" })
        @Html.TextBoxFor(x => x.balance, new { @class = "form-control" })
    </div>
         </div>    

               
            <div class="form-group">
                <button type="submit" class="btn btn-primary">ADD USER</button>
                @*<button type="submit" class="btn btn-primary">reset</button>*@
            </div>
}

